doctype html
html
  head
    meta(name="viewport" content="width=device-width initial-scale=1")
    if title
      title My Site | #{title}
    else
      title My Site | #{app.locals.title}
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/css/spectre.css")
    link(rel="stylesheet", href="/css/spectre-icons.min.css")
    link(rel="stylesheet", href="/css/style.css")
    script(src="/socket.io/socket.io.js")
    script.
      var socket = io();
  body.body
    div.container-fluid
      header.header
        .container.grid-1280
          .brand.col-sm-12.text-center
            img(src="/logo.svg").logo
            h1 #{site_title}
          .user
            if user
              ul.menu.closed
                li.menu-item.dropdown-link
                  .tile.tile-centered
                    .tile-icon
                      img.circle(src=`${user.profilePicture}` style="width:30px; height: 30px;")
                    .tile-content #{user.first_name} #{user.last_name}
                li.divider
                if user.admin
                  li.menu-item
                    a(href=`/admin/dashboard`) Dashboard
                li.menu-item
                  a(href=`/users/${user._id}`) My Profile
                li.menu-item
                  a(href="/admin/logout") Logout
            else
              a.btn.btn-default(href="/login") Login
        .nav-bar
          .container.grid-1280
            .col-12
              nav.flex
                ul.tab
                  li.tab-item
                    a(href="/") Home
                  li.tab-item
                    a(href="/about") About
                  li.tab-item
                    a(href="/posts") Blog
      .main-container
        block feature
        .container.grid-1280.block-content
          block content
        .main-highlights
          block highlights
      include partials/footer.pug
    block scripts
      script(src="/js/script.js")
