doctype html
html
  head
    meta(name="viewport" content="width=device-width initial-scale=1")
    if title
      title My Site | #{title}
    else
      title My Site | #{app.locals.title}
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/css/spectre.css")
    link(rel="stylesheet", href="/css/spectre-icons.min.css")
    link(rel="stylesheet", href="/css/style.css")
  body.body
    div.container-fluid
      header.header
        .container.grid-1280
          .brand.col-sm-12.text-center
            img(src="/logo.svg").logo
            h1 #{site_title}
          .user
            if user
              p Signed in: #{user.email}
                a.btn.btn-primary(href="/admin/logout") Logout
            else
              a.btn.btn-default(href="/login") Login
        .nav-bar
          .container.grid-1280
            .nav.col-12
              nav.flex
                ul.tab
                  li.tab-item
                    a(href="/") Home
                  li.tab-item
                    a(href="/about") About
                  li.tab-item
                    a(href="/posts") Blog
                if user
                  ul.tab.float-right
                    li.tab-item
                      a(href="/admin") Admin
                    li.tab-item
                      a(href=`/users/${user.id}`) User
      .main-container
        block feature
        .container.grid-1280.block-content
          block content
      include partials/footer.pug
