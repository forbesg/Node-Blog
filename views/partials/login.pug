.admin
  .columns.login
    .column.col-8.col-sm-12
      h2 Login
      form.form-horizontal(action="/admin" method="POST")
        .form-group
          .col-3
            label.form-label(for="email") Email:
          .col-9
            input.form-input#email(type="email" name="email" placeholder="Email")
        .form-group
          .col-3
            label.form-label(for="password") Password:
          .col-9
            input.form-input#password(type="password" name="password" placeholder="Password")
        .form-group
          .col-12
            input.btn.btn-primary.float-right(type="submit" value="Login")
        h4 Don't have an Account?
        .register
          h6 You Will Need to Register.
          a.btn.btn-defult(href="/register") Register
    .social-login.column.col-4.col-sm-12
      .columns.text-center
        .column.col-12
          h4 Social Login
        .column.col-12.col-sm-12
          h6 Login With Google
          a.btn.btn-primary.google(href="/auth/google")
            i.fa.fa-google
            span Google
        .column.col-12.col-sm-12
          h6 Login With Facebook
          a.btn.btn-primary.facebook(href="/auth/facebook")
            i.fa.fa-facebook
            span Facebook
        .column.col-12.col-sm-12
          h6 Login With Twitter
          a.btn.btn-primary.twitter(href="/auth/twitter")
            i.fa.fa-twitter
            span Twitter
