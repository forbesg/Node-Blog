if user
  .chat-container
    header
      h4 Chat
    .chat-body
      .message-list
      hr
      form(id="chat-input" autocomplete="off")
        .form-group
          input#user(type="text" name="user" hidden value=`${user.first_name}`)
          input#user(type="text" name="post" hidden value=`${post._id}`)
          input#message.form-input(type="text" name="chat" autocomplete="off")
        .form-group
          input(type="submit" value="Send").btn.btn-sm.chat-button
