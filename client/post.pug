extends layout.pug

block feature
  if post.image
    .feature(style='background-image: url(/images/posts/' + post.image +' )')
      .container.grid-960
        .feature-text
          img(src="/logo.png")
          h1 #{post.title}

block content
  .main.post
    h1 #{post.title}
    span.label.label-primary.date Published on: #{post.date}
    if post.image
      img(src=`/images/posts/${post.image}`)
      figure
        img(src=`/images/posts/thumbs/${post.image}`)
        figcaption #{post.title}
    p #{post.content}
