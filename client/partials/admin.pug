.admin
  .columns
    .posts.column.col-9.col-sm-12
      h4 Posts
      table.table.table-striped.table-hover
        thead
          tr
            th Title
            th Date
            th Edit
            th Delete
        tbody
          each post in posts
            tr
              td= post.title
              td= post.date
              td.text-center
                a.btn.btn-default(href=`admin/post/edit/${post._id}`, title="Edit")
                  i.icon.icon-edit
              td.text-center
                a.btn.btn-default(href=`admin/post/delete/${post._id}`, title="Delete")
                  i.icon.icon-delete
    nav.column.col-2.centered.col-sm-12
      .admin-nav
        h4 What would you like to do?
        a.btn.btn-default(href="/admin/post/add")
          span
            i.icon.icon-plus
          span(style="padding-left: 10px;") Add Post
