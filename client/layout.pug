doctype html
html
  head
    meta(name="viewport" content="width=device-width initial-scale=1")
    title My Site - #{title}
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet", href="/css/spectre.css")
    link(rel="stylesheet", href="/css/spectre-icons.min.css")
    link(rel="stylesheet", href="/css/style.css")
  body.body
    div.container-fluid
      header
        .container.grid-960
          .brand.col-sm-12.text-center
            img(src="/logo.png").logo
            h1 My Site
        .nav-bar
          .container.grid-960
            .nav.col-12
              nav
                ul.tab
                  li.tab-item
                    a(href="/") Home
                  li.tab-item
                    a(href="/about") About
                  li.tab-item
                    a(href="/posts") Posts
                  li.tab-item
                    a(href="/admin") Admin
      .main-container
        block feature
        .container.grid-960.block-content
          block content
      include partials/footer.pug
